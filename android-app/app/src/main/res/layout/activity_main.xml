<?xml version="1.0" encoding="utf-8"?>
<!-- Invader Zim themed terminal - NOT octopus suction cups! -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D1A"
    android:padding="8dp">

    <!-- Main Zim-style frame -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/invader_zim_frame">

        <!-- Strategic accent lights - just a few, NOT repeating! -->

        <!-- Top-left accent light -->
        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top|start"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/glow_accent_pink" />

        <!-- Top-right accent light cluster (2 lights) -->
        <View
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/glow_accent_cyan" />

        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/glow_accent_pink" />

        <!-- Bottom-left accent light -->
        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="80dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/glow_accent_pink" />

        <!-- Content area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title bar with Zim aesthetic -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ALPINE LINUX TERMINAL"
                android:textColor="#C77DFF"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:letterSpacing="0.2" />

            <!-- Terminal output screen -->
            <TextView
                android:id="@+id/terminalOutput"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#0A0A14"
                android:textColor="#00FF88"
                android:fontFamily="monospace"
                android:textSize="11sp"
                android:scrollbars="vertical"
                android:gravity="top|start"
                android:padding="12dp"
                android:lineSpacingExtra="2dp" />

            <!-- Input area -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/commandInput"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="&gt; enter command..."
                    android:inputType="text"
                    android:imeOptions="actionSend"
                    android:background="@drawable/zim_input_field"
                    android:textColor="#00FF88"
                    android:textColorHint="#5B1D7E"
                    android:fontFamily="monospace"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />

                <Button
                    android:id="@+id/sendButton"
                    android:layout_width="64dp"
                    android:layout_height="48dp"
                    android:text="TX"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="@drawable/zim_button"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Load button -->
            <Button
                android:id="@+id/loadButton"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="INITIALIZE WASM MODULE"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:background="@drawable/zim_button"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </FrameLayout>
</FrameLayout>
