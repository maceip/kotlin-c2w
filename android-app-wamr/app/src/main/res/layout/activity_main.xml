<?xml version="1.0" encoding="utf-8"?>
<!-- Invader Zim themed terminal - Friscy Client -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D1A">

    <!-- Zim frame background (extends edge to edge behind system bars) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@drawable/invader_zim_frame">

        <!-- Zim status gauge: embedded in right frame edge -->
        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/statusGauge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="2dp" />
    </FrameLayout>

    <!-- Content root: InsetsAnimationLinearLayout for IME control via nested scrolling -->
    <com.example.c2wdemo.ime.InsetsAnimationLinearLayout
        android:id="@+id/contentRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp">

        <!-- Collapsible top app bar -->
        <LinearLayout
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/zim_top_bar_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <!-- Image name -->
            <TextView
                android:id="@+id/tvImageName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:letterSpacing="0.1"
                android:text="FRISCY"
                android:textColor="#C77DFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Snapshot button -->
            <ImageButton
                android:id="@+id/btnSnapshot"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Snapshot"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_snapshot" />

            <!-- Export button -->
            <ImageButton
                android:id="@+id/btnExport"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Export checkpoint"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_export" />

            <!-- Import button -->
            <ImageButton
                android:id="@+id/btnImport"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Import checkpoint"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_import" />

            <!-- Switch image button -->
            <ImageButton
                android:id="@+id/btnSwitch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Switch image"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_switch" />

        </LinearLayout>

        <!-- Terminal area: Termux TerminalView for full VT100/xterm emulation -->
        <com.termux.view.TerminalView
            android:id="@+id/terminalView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#0A0A14"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <!-- Zim helper bar: terminal shortcut keys, shown when keyboard is open -->
        <LinearLayout
            android:id="@+id/zimHelperBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/zim_helper_bar_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp"
            android:paddingVertical="6dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/btnCtrl"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/zim_key_bg"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="CTRL"
                android:textColor="#00FFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnPrevWord"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/zim_key_bg"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="&#9664;W"
                android:textColor="#00FFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnNextWord"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/zim_key_bg"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="W&#9654;"
                android:textColor="#00FFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnUp"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/zim_key_bg"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="&#9650;"
                android:textColor="#00FFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnDown"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/zim_key_bg"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="&#9660;"
                android:textColor="#00FFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnTab"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/zim_key_bg"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="TAB"
                android:textColor="#00FFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnEsc"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/zim_key_bg"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="ESC"
                android:textColor="#00FFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

    </com.example.c2wdemo.ime.InsetsAnimationLinearLayout>

</FrameLayout>
