<?xml version="1.0" encoding="utf-8"?>
<!-- Invader Zim style sci-fi frame - NOT octopus suction cups! -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer dark edge (shadow) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2D1B3D" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Main purple metallic frame -->
    <item
        android:left="3dp"
        android:top="3dp"
        android:right="6dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#9B4DCA"
                android:centerColor="#7B2D9E"
                android:endColor="#5B1D7E" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Inner highlight (bevel effect) -->
    <item
        android:left="6dp"
        android:top="6dp"
        android:right="9dp"
        android:bottom="9dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#C77DFF"
                android:endColor="#7B2D9E" />
            <corners android:radius="18dp" />
        </shape>
    </item>

    <!-- Inner frame border -->
    <item
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp">
        <shape android:shape="rectangle">
            <solid android:color="#5B1D7E" />
            <corners android:radius="14dp" />
        </shape>
    </item>

    <!-- Dark screen interior -->
    <item
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp">
        <shape android:shape="rectangle">
            <solid android:color="#0D0D1A" />
            <corners android:radius="10dp" />
            <stroke
                android:width="2dp"
                android:color="#3D1D5E" />
        </shape>
    </item>

</layer-list>
