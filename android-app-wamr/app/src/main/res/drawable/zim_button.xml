<?xml version="1.0" encoding="utf-8"?>
<!-- Invader Zim style button -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item
        android:left="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#2D1B3D" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Button body -->
    <item
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#7B2D9E"
                android:endColor="#9B4DCA" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#C77DFF" />
        </shape>
    </item>

</layer-list>
