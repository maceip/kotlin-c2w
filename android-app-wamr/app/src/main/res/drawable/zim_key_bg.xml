<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#33FF1493" />
            <stroke android:width="1dp" android:color="#FF1493" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#2200FFFF" />
            <stroke android:width="1dp" android:color="#00FFFF" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0D0D1A" />
            <stroke android:width="1dp" android:color="#333355" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>
